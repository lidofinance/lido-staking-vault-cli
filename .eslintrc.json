{
  "env": {
    "es2021": true,
    "node": true
  },
  "extends": ["@lidofinance", "prettier"],
  "parser": "@typescript-eslint/parser",
  "parserOptions": {
    "sourceType": "module",
    "project": "./tsconfig.json",
    "tsconfigRootDir": "."
  },
  "plugins": ["@typescript-eslint", "deprecation", "import"],
  "rules": {
    "deprecation/deprecation": "warn",
    "@typescript-eslint/require-await": "off",
    "@typescript-eslint/no-shadow": "off",
    "eslint-plugin-unicorn": "off",
    "no-console": [
      "warn",
      { "allow": ["warn", "error", "info", "debug", "table"] }
    ],
    "@typescript-eslint/no-unused-vars": [
      "warn",
      {
        "ignoreRestSiblings": true,
        "argsIgnorePattern": "^_",
        "varsIgnorePattern": "^_"
      }
    ],
    "promise/param-names": [
      "warn",
      {
        "resolvePattern": "^_?(resolve)$|^_$",
        "rejectPattern": "^_?(reject)$|^_$"
      }
    ],
    "func-style": ["error", "expression"],
    "@typescript-eslint/no-misused-promises": [
      "error",
      {
        "checksVoidReturn": false
      }
    ],
    "import/no-cycle": ["error", { "maxDepth": 1 }],
    "unicorn/expiring-todo-comments": "off",
    "jest/expect-expect": [
      "error",
      { "assertFunctionNames": ["expect", "expect*"] }
    ],
    "jest/no-standalone-expect": [
      "error",
      {
        "additionalTestBlockFunctions": [
          "testSpending",
          "testSpending.concurrent",
          "testSpending.skip",
          "testSpending.only",
          "testSpending.todo"
        ]
      }
    ]
  },
  "settings": {
    "import/resolver": {
      "typescript": {},
      "node": {
        "extensions": [".js", ".ts"]
      }
    }
  },
  "ignorePatterns": ["docs", "dist"]
}
